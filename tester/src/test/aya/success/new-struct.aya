open data Nat : \Set
  | zero
  | suc Nat

struct Pair (A : \Set) (B : \Set) : \Set
  | fst : A
  | snd : B
  | we-are-together : \Sig A ** B => (fst, snd)

def test-nat-pair : Pair Nat Nat =>
  \new Pair Nat Nat { | fst => zero | snd => suc zero }

def make-pair (A B : \Set) (a : A) (b : B) : Pair A B =>
  \new Pair A B { | fst => a | snd => b }
