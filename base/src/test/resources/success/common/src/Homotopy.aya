open import Paths

open data S1 : Type
| base
| loop (i : I) { i := base | ~ i := base }

open data Seg : Type
| p1 | p2
| seg (i : I) { i := p2 | ~ i := p1 }

open data Torus : Type
| point
| line1 (i : I) { i := point | ~ i := point }
| line2 (i : I) { i := point | ~ i := point }
| face (i j : I) {
  | i := line2 j
  | ~ i := line2 j
  | j := line1 i
  | ~ j := line1 i
}

def idpath {A : Type} (a : A) (i : I) : A
| a, i => a

def S1-Torus (s1 s2 : S1) : Torus
| base, base => point
| loop i, base => line1 i
| base, loop i => line2 i
| loop i, loop j => face i j

def Torus-S1 (t : Torus) : Sig S1 ** S1
| point => (base, base)
| line1 i => (loop i, base)
| line2 i => (base, loop i)
| face i j => (loop i, loop j)
